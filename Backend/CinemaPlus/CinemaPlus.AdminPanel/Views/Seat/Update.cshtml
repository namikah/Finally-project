@model Seat
@{
    ViewData["Title"] = "Update";
}

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
             <div class="row w-100 mx-0 justify-content-center pt-3">
                <div class="col-lg-6 mx-auto">
                    <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                        <h5 class="brand-logo" style="color:#6610f2;">Update</h5>
                        <form class="forms-sample" method="post" enctype="multipart/form-data">
                            <div class="text-danger" asp-validation-summary=ModelOnly></div>
                            <div class="form-group">
                                <label asp-for="Row">Row</label>
                                <input class="form-control" placeholder="Row" asp-for="Row">
                                <span asp-validation-for="Row" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Column">Column</label>
                                <input class="form-control" placeholder="Column" asp-for="Column">
                                <span asp-validation-for="Column" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Seat types</label>
                                <select class="form-control" name="selectedSeatTypeId" id="selectedSeatTypeId">
                                    @foreach (var item in ViewBag.SeatTypes)
                                    {
                                        <option selected="@(item.Id == Model.SeatType.Id)" value="@item.Id">@item.Name</option>
                                    }
                                </select>
                            </div>
                            <button type="submit" class="btn btn-primary mr-2">Submit</button>
                            <a class="btn btn-light" asp-action="Index">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<partial name="_ValidationPartial" />
<partial name="_CKEditorPartial" />

<script>
         ClassicEditor
        .create( document.querySelector( '#create-context-ck-editor' ) )
        .catch( error => {
            console.error( error );
        } );
</script>
}