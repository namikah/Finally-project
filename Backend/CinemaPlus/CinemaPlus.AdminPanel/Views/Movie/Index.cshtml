@{
    ViewData["Title"] = "Index";
    List<Movie> movies = Model;
}

<div class="content content-wrapper">
    <div class="container-fluid">
        <div class="text-right pt-3 pb-3">
            <a asp-controller="Movie" asp-action="Create" class="btn btn-danger btn-icon-text"><i class="ti-upload btn-icon-prepend"></i>Create</a>
        </div>
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Events</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Name</th>
                            <th>In cinema</th>
                            <th>Actors</th>
                            <th>Age</th>
                            <th class="operation-row"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in movies)
                        {
                            <tr class="table-info">
                                <td>
                                    <img src="@item.Image" class="img-fluid" style="width:100px;"><img>
                                </td>
                                <td>@item.Name</td>
                                <td>@item.Detail.StartInCinema.ToString("dd MMM yyyy",CultureInfo.InvariantCulture) - @item.Detail.EndInCinema.ToString("dd MMM yyyy",CultureInfo.InvariantCulture)</td>
                                <td>
                                    @foreach (var movieActor in item.MovieActors.ToList())
                                    {
                                        <span>@movieActor.Actor.Name @movieActor.Actor.Surname</span>
                                        <br />
                                    }
                                </td>
                                <td>@item.AgeLimit+</td>
                                <td class="text-right">
                                    <a class="btn btn-success btn-sm" asp-action="Detail" asp-route-id="@item.Id">
                                        Detail
                                        <i class="fas fa-pencil-alt"></i>
                                    </a>
                                    <a class="btn btn-info btn-sm" asp-action="Update" asp-route-id="@item.Id">
                                        Update
                                        <i class="fas fa-pencil-alt"></i>
                                    </a>
                                    <a class="btn btn-danger btn-sm delete-slider" id="delete-slider" asp-action="Delete" asp-route-id="@item.Id">
                                        Delete
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
<partial name="_ValidationPartial" />
}
