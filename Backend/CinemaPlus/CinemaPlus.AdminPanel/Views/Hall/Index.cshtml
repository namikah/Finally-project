@{
    ViewData["Title"] = "Index";
    List<Hall> halls = Model;
}

<div class="content content-wrapper">
    <div class="container-fluid">
        <div class="text-right pt-3 pb-3">
            <a asp-controller="Hall" asp-action="Create" class="btn btn-danger btn-icon-text"><i class="ti-upload btn-icon-prepend"></i>Create</a>
        </div>
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Events</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Cinema</th>
                            <th>Seats count</th>
                            <th class="operation-row"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in halls)
                        {
                            <tr class="table-info">
                                <td class="col-4">@item.Name</td>
                                <td class="col-4">@item.Cinema.Name</td>
                                <td class="col-2">@item.Seats.Count pieces</td>
                                <td class="col-2 text-right">
                                    <a class="btn btn-info btn-sm" asp-action="Update" asp-route-id="@item.Id">
                                        Update
                                        <i class="fas fa-pencil-alt"></i>
                                    </a>
                                    <a class="btn btn-danger btn-sm delete-slider" id="delete-slider" asp-action="Delete" asp-route-id="@item.Id">
                                        Delete
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
<partial name="_ValidationPartial" />
}
