@model Message
@{
    ViewData["Title"] = "Update";
}

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0 justify-content-center pt-3">
                <div class="col-lg-8 mx-auto">
                    <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                        <h5 class="brand-logo" style="color:#6610f2;">Message</h5>
                        <div class="recieved-message mb-2 pt-3" style="border-bottom:1px solid black;border-top:1px solid black">
                            <h6>Date: @Model.Date</h6>
                            <h6>Sender: @Model.Name</h6>
                            <h6>From: @Model.Email</h6>
                            <h6>Title: @Model.Title</h6>
                            <p>Body: @Model.Body</p>
                        </div>
                        <h5 class="brand-logo" style="color:#6610f2;">Reply</h5>
                        <form class="forms-sample" method="post" enctype="multipart/form-data">
                            <div class="text-danger" asp-validation-summary=ModelOnly></div>
                            <div class="form-group">
                                <input class="form-control" placeholder="title" id="title" name="title">
                            </div>
                            <div class="form-group">
                                <textarea class="form-control" placeholder="body" id="body" name="body"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary mr-2">Reply</button>
                            <a class="btn btn-light" asp-action="Index">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<partial name="_ValidationPartial" />
<partial name="_CKEditorPartial" />

<script>
     ClassicEditor
    .create( document.querySelector( '#create-context-ck-editor' ) )
    .catch( error => {
        console.error( error );
    } );
</script>
}